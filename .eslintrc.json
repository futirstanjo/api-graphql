{
    "parser": "@babel/eslint-parser",
    "extends": "airbnb-base",
    "env": {        
        "node": true
    },
    "rules": {
        // enable additional rules
        "indent": [
            "error",
            4
        ],        
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],        
        "no-undef": "error"        
    }
}